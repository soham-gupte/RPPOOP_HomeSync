#:import Image kivy.uix.image.Image
#:import Rectangle kivy.graphics.Rectangle

<CLabel@Label>:
    font_name: 'fonts/Nalieta.otf' 
    #color: 0, 0, 0, 1
    color: 1, 1, 1, 1

<BButton@Button>:
    font_name: 'fonts/Nalieta.otf' 
    background_color: 0.65, 0.68, 0.96, 1
    color: 1, 1, 1, 1
    font_size: "20sp"
    size_hint: None, None
    size: (dp(200), dp(50))

<CButton@Button>:
    font_name: 'fonts/Nalieta.otf' 
    #color: 0, 0, 0, 1
    color: 1, 1, 1, 1

<DButton@Button>:
    size_hint: 0.5, 0.5
    size: dp(200), dp(50)
    font_name: 'fonts/rooms.otf' 
    font_size: "22sp"
    #background_color: 0.3, 0.3, 0.3, 1
    background_normal: ''
    border_radius: 10
    background_color: (1, 1, 1, 0.7) 
    color: 1, 1, 1, 1
    outline_color: 0, 0, 0, 0
    outline_width: 1 
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, self.border_radius)

<HomeScreen>:
    name: "home"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background_image

    FloatLayout:

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(20)

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.1
                padding: dp(30)
                spacing: dp(10)

                CButton:
                    #text: "Menu"
                    size_hint_x: 0.01
                    size: self.texture_size
                    background_normal: 'images/menu3.png'
                    on_release: root.toggle_menu()

                CLabel:
                    text: "Welcome Home!"
                    font_size: "36sp"
                    size_hint_y: 0.1
                    pos_hint: {"x": 0.4, "center_y": 0.5}
                    bold: True
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                padding: 0, 50, 0, 50

                GridLayout:
                    cols: 2
                    size_hint_y: 0.8    
                    spacing: dp(50)
                    padding: dp(50)

                    DButton:
                        text: "Living\nRoom"
                        on_press: app.root.current = "living_room"
                        #background_normal: 'images/living5.png'

                    DButton:
                        text: "Kitchen"
                        on_press: app.root.current = "kitchen"
                        #background_normal: 'images/kitchen5.png' 

                    DButton:
                        text: "Dining\nRoom"
                        on_press: app.root.current = "dining_room"
                        #background_normal: 'images/dining5.png' 

                    DButton:
                        text: "Bedroom"
                        on_press: app.root.current = "bedroom"
                        #background_normal: 'images/bedroom5.png'
                        
                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.2

                    CButton:
                        text: "Master Off"
                        on_release: root.master_off()
                        size_hint: None, None
                        font_size: dp(20)
                        width: dp(120)
                        height: dp(50)
                        background_color: 0.65, 0.68, 0.96, 0.8
                        color: 1, 1, 1, 1

                    #CLabel:
                    #    text: "Change Background: "
                    #    color: 1, 1, 1, 1

                    #DropDown:
                    #    id: background_dropdown
                    #    on_select: root.on_dropdown_select(self.text)

                        

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: dp(20)
            spacing: dp(10)
            pos_hint: {"right": 1}

            CButton:
                text: "Default"
                size_hint_y: None
                height: dp(50)
                size_hint: None, None
                font_size: dp(20)
                width: dp(120)
                background_color: 0.65, 0.68, 0.96, 0.8
                color: 1, 1, 1, 1
                on_release: root.on_dropdown_select("Default")

            CButton:
                text: "Dark"
                size_hint_y: None
                size_hint: None, None
                font_size: dp(20)
                width: dp(120)
                height: dp(50)
                background_color: 0.65, 0.68, 0.96, 0.8
                color: 1, 1, 1, 1
                on_release: root.on_dropdown_select("Dark")

            CButton:
                text: "Light"
                size_hint_y: None
                size_hint: None, None
                font_size: dp(20)
                width: dp(120)
                height: dp(50)
                background_color: 0.65, 0.68, 0.96, 0.8
                color: 1, 1, 1, 1
                on_release: root.on_dropdown_select("Light")


            

#            MySpinner:
#                text: "Select Theme"
#                values: ["default", "dark", "green"]
#                on_release: root.set_theme(self.text)
#                size_hint: None, None
#                font_size: dp(20)
#                width: dp(150)
#                height: dp(50)
#                background_color: 0.65, 0.68, 0.96, 0.8
#                color: 1, 1, 1, 1
#                dropdown_cls: "MySpinnerOption"
#                id: theme_spinner

        BoxLayout:
            id: menu
            orientation: "vertical"
            size_hint_x: None
            width: dp(200)
            pos: (-self.width, 0)
                
            BButton:
                text: "Profile"
                on_press: app.root.current = 'myprofile'

            BButton:
                text: "Settings"
                on_press: app.root.current = "settings"

            BButton:
                text: "FAQs"
                on_press: app.root.current = "faqs"

            BButton:
                text: "About the project"
                on_press: app.root.current = "atp"

            BButton:
                text: "Log out"
                on_press: app.root.current = "login"
