#:kivy 2.0.0

<CLabel@Label>:
    font_name: 'fonts/Nalieta.otf' 
    color: 1, 1, 1, 1
    font_size: dp(25)

<CButton@Button>:
    font_name: 'fonts/Nalieta.otf' 
    color: 0, 0, 0, 1

<MyProfile>:

    first_name: first_name_label.text
    last_name: last_name_label.text
    email: email_label.text
    username: username_label.text
    password: password_label.text

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/grad2.jpg"

    BoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "20dp"

        Image:
            source: "images/user2.png"
            size_hint: None, None
            size: 100, 100
            pos_hint: {"center_x": 0.5}

        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            padding: "20dp"

            CLabel:
                text: "First name: "
                halign: "left"
                color: 1, 1, 1, 1

            CLabel:
                id: first_name_label
                color: 1, 1, 1, 1
                halign: "left"

        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            padding: "20dp"


            CLabel:
                text: "Last name: " 
                halign: "left"
                color: 1, 1, 1, 1

            CLabel:
                id: last_name_label
                color: 1, 1, 1, 1
                halign: "left"

        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            padding: "20dp"

            CLabel:
                text: "Email: " 
                halign: "left"
                color: 1, 1, 1, 1

            CLabel:
                id: email_label
                color: 1, 1, 1, 1
                halign: "left"

        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            padding: "20dp"

            CLabel:
                text: "Username: "
                pos_hint_x: None
                halign: "left"
                color: 1, 1, 1, 1

            CLabel:
                id: username_label
                color: 1, 1, 1, 1
                halign: "left"

        BoxLayout:
            orientation: "horizontal"
            #spacing: "20dp"
            #padding: "20dp"

            CLabel:
                text: "Password: " 
                halign: "left"
                color: 1, 1, 1, 1

            CLabel:
                id: password_label
                color: 1, 1, 1, 1
                halign: "left"

        
        CButton:
            text: "Back"
            size_hint: None, None
            font_size: dp(20)
            width: dp(100)
            height: dp(50)
            background_color: 0.65, 0.68, 0.96, 0.8
            color: 1, 1, 1, 1
            on_press: app.root.current = "home"
